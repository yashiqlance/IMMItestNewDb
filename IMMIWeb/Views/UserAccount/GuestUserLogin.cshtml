@model IMMIWeb.Service.Models.GuestUserLogin

<div>

    @using (Html.BeginForm("GuestUserLogin", "UserAccount", FormMethod.Post, new { id = "gstuserlogin" }))
    {
        <table border="1">
            <tr>
                <td>Guest User</td>
                <td><input type="text" id="FirstName" name="FirstName" placeholder="Enter First Name"></td>
                <td><input type="text" id="LastName" name="LastName" placeholder="Enter Last Name"></td>
                <td>
                    <select id="MobileCountryCode" name="MobileCountryCode">
                        @foreach (var item in Model.lstMobile)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                    </select>
                </td>
                <td><input type="text" id="Mobile" name="Mobile" placeholder="Enter Old Mobile Number"></td>                
                <td> <input type="submit" id="btnGstUserLogin" /></td>
            </tr>
        </table>
    }

</div>