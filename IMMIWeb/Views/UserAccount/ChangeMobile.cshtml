@model IMMIWeb.Service.Models.ChangeMobileViewModel@using (Html.BeginForm("ChangeMobile", "UserAccount", FormMethod.Post, new { id = "changeMobileform", enctype = "multipart/form-data" }))
{    <input value="@Model.lstMobileVal" type="hidden" id="txtlstMobileVal" name="txtlstMobileVal">    <section class="signin-section mt-90">        <div class="container">            <div class="row align-items-center">                <div class="col-xl-7 col-lg-6">                    <div class="signin-img">                        <img src="~/assets/images/signin.svg" alt="signin">                    </div>                </div>                <div class="col-xl-5 col-lg-6">                    <div class="signin-wrap change-num-wrap text-center">                        <h1 class="mb-2">Change Mobile Number</h1>                        <br />                                               <div class="col-lg-12 position-relative mb-2">                            <div class="cst-slect">                                <select class="mySelect fontColor" name="MobileCountryCode" id="MobileCountryCode">                                    @foreach (var item in Model.lstMobile.ToList())
                                    {                                        <option value="+@item.Name">+@item.Name @item.Prefix</option>                                    }                                </select>                            </div>                            <div class="form-group">                                <input type="tel" maxlength="12" style="padding-left: 105px;" class="fgd form-control" id="Mobile" name="Mobile" value="@Model.Mobile" placeholder="Old Mobile number*" />                            </div>                            <div style="text-align:left;">                                <span id="Errormobile" class="text-danger">@Model.MobileErrorMsg</span>                            </div>                        </div>                                               <div class="input-group">                            <input type="Email" id="Email" name="Email" value="@Model.Email" class="form-control" placeholder="Email address*" />                            <label for="Email">Email</label>                            <span id="Erroremail" class="text-danger">@Model.EmailErrorMsg</span>                        </div>                        <div class="text-left">                            <span class="text-danger clsErrorMsg"></span>                        </div>                        <button type="button" id="btnSubmit" class="g-btn mt-4 clsOther btnSubmit">Submit</button>                        <div class="sign-up-link-wrap">                            <p> <img src="~/assets/images/g-arrow.svg" alt="arrow left" /> Back to <a asp-action="Login">Login In</a> </p>                        </div>                    </div>                </div>            </div>        </div>    </section>}<script type="text/javascript">    $(document).ready(function () {        var modelMessage = '@Model.ErrorMsg';        if (modelMessage && modelMessage.length > 0) {            $(".clsErrorMsg").html('@Model.ErrorMsg');            setTimeout(function () {                $(".clsErrorMsg").html("");            }, 5000);            ClearOtp();        }        var mobileCodeVal = $("#txtlstMobileVal").val();        if (mobileCodeVal != "") {            $("#MobileCountryCode").val(mobileCodeVal);        }        $("#Mobile").on("input", function () {            var mobileInput = $(this).val();            var sanitizedInput = mobileInput.replace(/[^0-9]/g, '');            $(this).val(sanitizedInput);        });        $('#btnSubmit').click(function (event) {            var isValidForm = true;            var mobile = $("#Mobile").val();            var email = $("#Email").val();            if (mobile.trim() === "") {                $("#Errormobile").text("Mobile number is required.");                isValidForm = false;            } else if (!/^\d{6,12}$/.test(mobile)) {                $("#Errormobile").text("Mobile number must be between 6 and 12 digits.");                isValidForm = false;            } else if (!/^[0-9]+$/.test(mobile)) {                $("#Errormobile").text("Mobile number should be only numeric digits.");                isValidForm = false;            } else {                $("#Errormobile").text("");            }            if (email.trim() === "") {                $("#Erroremail").text("Email is required.");                isValidForm = false;            } else if (!isValidEmail(email)) {                $("#Erroremail").text("Enter a valid email address.");                isValidForm = false;            } else {                $("#Erroremail").text("");            }            if (isValidForm) {                $("#changeMobileform").submit();            }        });        function isValidEmail(email) {            var emailPattern = /^[^\s]+[^\s]+\.[^\s]+$/i;            return emailPattern.test(email);        }        function ClearOtp() {            $("#digit-1").val("");            $("#digit-2").val("");            $("#digit-3").val("");            $("#digit-4").val("");        }    });</script>